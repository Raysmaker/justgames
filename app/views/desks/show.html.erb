<script>
  function allowDrop(ev) {
    ev.preventDefault();
  }
</script>

<div class="row no-gutters">ИГРА &nbsp;
  <div class="col-1 justify-content-start"><h5>Desk <%= @desk.id %> |</h5></div>
  <div class="col-1 justify-content-start"><%= link_to "Back", root_path %></div>
</div>

<div class="row">
  <div class="col-lg-9 col-md-12 mb-4">
   
    <div id="board">
      <div class="col-md-12 ml-3">
        <div class="cage-char">A</div> 
        <div class="cage-char">B</div> 
        <div class="cage-char">C</div> 
        <div class="cage-char">D</div> 
        <div class="cage-char">E</div> 
        <div class="cage-char">F</div> 
        <div class="cage-char">G</div> 
        <div class="cage-char">H</div> 
      </div>

      <div class="col-md-1 mt-2 float-left">
        <div class="cage-number">8</div> 
        <div class="cage-number">7</div>
        <div class="cage-number">6</div>
        <div class="cage-number">5</div>
        <div class="cage-number">4</div>
        <div class="cage-number">3</div>
        <div class="cage-number">2</div>
        <div class="cage-number">1</div>
      </div>

      <div id="gamefield">
        <% [8,7,6,5,4,3,2,1].each { |i| %>
          <% %w(a b c d e f g h).each { |l| %>
            <% id_cage = "#{l}#{i}" %>
            <div id=<%= id_cage %> class="cages" ondragover="allowDrop(event)">
              <%@cage = @cages.find_by(board_id: id_cage) %>
              <% if @cage %>
                <%= image_tag @cage.img_name, id: @cage.img_id,  class: "figure-img", draggable: true %>
              <% end %>
            </div>
          <% } %>
        <% } %>
      </div>
    </div> 
  </div><!--/ id/board/-->

  <div class="col-lg-3 col-md-12">
      <div class="messages">
        <div class="messages-inner" id="messages" data-desk-id="<%= @desk.id %>">
          <%= render @desk.messages.reverse %>
        </div>
      </div>
        <%= render 'messages/form' %>

      <div class="dropdown">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          <%= image_tag "box.png", width: "60", height: "50" %>
        </button>
        <div class="dropdown-menu" id="beaten">
          <% if @beaten %>
            <% @beaten.each { |b| %>
              <%= image_tag b.img_name, draggable: true, id: b.img_id, size: "30x30" %>
            <% } %>
          <% end %>  
        </div>  
      </div>   
  </div>
</div>

<p id="notice"><%= notice %></p>
